<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span3">
		<section>
			<h1>
                <%= gravatar_for @user %>
	            <%= @user.name %>
            </h1>
		</section>
	</aside>
	<div class="span8">
		<% if @user.articles.any? %>
		  <ol class="articles">
		  	<%= render @articles %>
		  </ol>
		  <%= will_paginate @articles %>
		<% end %>
	</div>
</div>